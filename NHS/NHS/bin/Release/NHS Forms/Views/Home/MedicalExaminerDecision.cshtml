    <div class="row setup-content" id="step-3">
        @using (Html.BeginForm("MedicalExaminerDecision", "Home", FormMethod.Post, new { @id = "my_form" }))
        {
            AntiForgeryConfig.SuppressXFrameOptionsHeader = true;
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="col-xs-12 col-lg-12">
                @*<form action="/Home/MedExamFormStep3" method="post" id="frmMedExamFormStep3">*@
                    <div class="col-md-12 well">
                        <div class="form-section">
                            <div class="lable_title">
                                <h2>MEDICAL EXAMINER DECISION</h2>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row_bar checkbox-row">
                                        @Html.CheckBoxFor(model => model.objclsMedicalExaminerDecision.MCCDissue, new { htmlAttributes = new { @class = "form-control" } })<b><span> Issue MCCD </span></b>
                                        @Html.HiddenFor(model => model.objclsMedicalExaminerDecision.MED_ID)
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row_bar">
                                        @Html.LabelFor(model => model.objclsCoronerReferralReason.ReasonName, new { @class = "label_part" })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row_bar checkbox-row">
                                        @Html.CheckBoxFor(model => model.objclsMedicalExaminerDecision.CornerReferral, new { htmlAttributes = new { @class = "form-control" } })<b><span> Coroner Referral </span></b>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row_bar">

                                        @Html.DropDownListFor(x => x.objclsCoronerReferralReason.ReasonName, new List<SelectListItem>
                                            {
                                                                new SelectListItem() {Text = "Select", Value="-1"},
                                                                new SelectListItem() {Text = "M K S", Value="M K S"},
                                                                new SelectListItem() {Text = "P K P", Value="P K P"},
                                                                new SelectListItem() {Text = "R T O", Value="R T O"},
                                                                new SelectListItem() {Text = "P K P", Value="T K T"},
                                                                new SelectListItem() {Text = "M K S", Value="D T O"}

                                            }, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="row_bar checkbox-row">
                                        @Html.CheckBoxFor(model => model.objclsMedicalExaminerDecision.HospitalPostMortem, new { htmlAttributes = new { @class = "form-control" } })<b><span> Hospital post-mortem </span></b>
                                    </div>
                                </div>
                                @*<div class="col-md-12">
                                    <div class="row_bar checkbox-row">
                                        @{
                                            if (Session["BtnPrevious"] != null)
                                            {
                                                var sessionMedicalExaminerDecision = (NHS.Models.MedicalExaminerDecision)Session["sessionMedicalExaminerDecision"];

                                                if (sessionMedicalExaminerDecision.HospitalPostMortem == true)
                                                {
                                                    <label class="label_part" for="defaultCheck2">Cause of Death </label>
                                                }
                                                else
                                                {
                                                    <label class="label_part" for="defaultCheck2">Cause of Death </label>
                                                }

                                            }
                                            else
                                            {
                                                <label class="label_part" for="defaultCheck2">Cause of Death </label>
                                            }
                                        }


                                    </div>
                                </div>*@
                                <div class="col-md-6">
                                    <div class="row_bar checkbox-row mb-3">
                                        @Html.LabelFor(model => model.objclsMedicalExaminerDecision.CauseOfDeath, new { @class = "label_part" })
                                        @Html.EditorFor(model => model.objclsMedicalExaminerDecision.CauseOfDeath, new { htmlAttributes = new { @class = "form-control" } })

                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row_bar checkbox-row mb-3">
                                        <input class="form-control" type="text" placeholder="">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row_bar checkbox-row mb-3">
                                        <input class="form-control" type="text" placeholder="" >
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row_bar checkbox-row mb-3">
                                        <input class="form-control" type="text" placeholder="">
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="row_bar checkbox-row">
                                        @Html.CheckBoxFor(model => model.objclsMedicalExaminerDecision.DeathCertificate, new { htmlAttributes = new { @class = "form-control" } })<b><span> Death Certificate Complete? </span></b>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="row_bar checkbox-row">
                                        @Html.CheckBoxFor(model => model.objclsMedicalExaminerDecision.CornerReferralComplete, new { htmlAttributes = new { @class = "form-control" } })<b><span> Coroner's referral Complete? </span></b>
                                    </div>
                                </div><br>
                                <div class="col-md-12">
                                    <div class="row_bar checkbox-row">
                                        <label class="label_part" for="defaultCheck1">(If Applicable) Coroner's decision </label>

                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row_bar checkbox-row">
                                        @Html.CheckBoxFor(model => model.objclsMedicalExaminerDecision.CoronerDecisionInquest, new { htmlAttributes = new { @class = "form-control" } })<b><span> Inquest </span></b>

                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row_bar checkbox-row">
                                        @Html.CheckBoxFor(model => model.objclsMedicalExaminerDecision.CoronerDecisionPostMortem, new { htmlAttributes = new { @class = "form-control" } })<b><span> Post-Mortem </span></b>

                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row_bar checkbox-row">
                                        @Html.CheckBoxFor(model => model.objclsMedicalExaminerDecision.CoronerDecision100A, new { htmlAttributes = new { @class = "form-control" } })<b><span> 100 A </span></b>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row_bar checkbox-row">
                                        @Html.CheckBoxFor(model => model.objclsMedicalExaminerDecision.CoronerDecisionGPissue, new { htmlAttributes = new { @class = "form-control" } })<b><span> GP Issue </span></b>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="pull-right">
                        <button id="activate-prev-1" name="BtnPrevious" class="btn btn-primary btn-lg">Previous</button>
                        <button id="activate-step-2" name="BtnNext" class="btn btn-primary btn-lg">Save & Next</button>
                    </div>
                @*</form>*@
            </div>
