@model NHS.Models.clsFeedBackModel
@{
    ViewBag.Title = "Positive Feedback";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row form-group">
        <div class="col-xs-12 col-lg-12">
            <div class="row" align="right">
                <div class="col-md-12">
                    <input type="image" src="~/images/Delete.png" width="30" height="30" alt="Submit" id="btnClose6" title="Close" />
                </div>
            </div>
            <ul class="nav nav-pills nav-justified thumbnail setup-panel">
                <li class="disabled">
                    <a href="/Home/PatientDetails">
                        <h4 class="list-group-item-heading">
                            Patient details
                        </h4>
                    </a>
                </li>
                <li class="disabled">
                    <a href="/Home/MedicalExaminerReview">
                        <h4 class="list-group-item-heading">
                            Medical Examiner Review
                        </h4>
                    </a>
                </li>
                <li class="disabled">
                    <a href="/Home/MedicalExaminerDecision">
                        <h4 class="list-group-item-heading">
                            Medical Examiner Decision
                        </h4>
                    </a>
                </li>
                <li class="disabled">
                    <a href="/Home/SJRAssessmentTriage">
                        <h4 class="list-group-item-heading">
                            SJR Assessment Triage
                        </h4>
                    </a>
                </li>
                <li class="disabled">
                    <a href="/Home/OtherReferrals">
                        <h4 class="list-group-item-heading">
                            Other Referrals
                        </h4>
                    </a>
                </li>
                <li class="active">
                    <a href="/Home/PositiveFeedback">
                        <h4 class="list-group-item-heading">
                            Positive Feedback
                        </h4>
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <div class="row setup-content" id="step-6">
        <div class="col-xs-12 col-lg-12">
            @using (Html.BeginForm("PositiveFeedback", "Home", FormMethod.Post, new { @id = "my_form" }))
            {
                AntiForgeryConfig.SuppressXFrameOptionsHeader = true;
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="col-md-12 well">
                    <div class="form-section">
                        <div class="lable_title">
                            <h2>POSITIVE FEEDBACK</h2>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="row_bar checkbox-row">
                                    @*<input class="form-checkbox-input" type="checkbox" value="" id="cbFormCompleted" name="cbFormCompleted">
                                        <label class="label_part" for="defaultCheck1">Above & Beyond form completed </label>*@
                                    @Html.CheckBoxFor(model => model.FormCompleted, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.LabelFor(model => model.FormCompleted, new { @class = "label_part" })
                                    @Html.HiddenFor(model => model.FeedBack_ID)
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="row_bar checkbox-row">
                                    @*<input class="form-checkbox-input" type="checkbox" value="" id="cbComplimentsFedBack" name="cbComplimentsFedBack">
                                        <label class="label_part" for="defaultCheck1">Compliments fed back to clinical team </label>*@
                                    @Html.CheckBoxFor(model => model.ComplementsFedBack, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.LabelFor(model => model.ComplementsFedBack, new { @class = "label_part" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="pull-right">
                    <button id="activate-prev-1" name="BtnPrevious" class="btn btn-primary btn-lg">Previous</button>
                    <button id="activate-step-2" type="submit" name="BtnFinish" class="btn btn-primary btn-lg">Save & Finish</button>

                </div>
            }
        </div>
    </div>
    <br />
    <br />
    @*<div class="pull-right">
            <button class="btn btn-primary btn-lg" id="btnClose6">Close</button>
            </div>
        </div>*@
    <div class="modal fade" id="modelClose6">
        <div class="modal-dialog modal-md">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Messsage</h4>
                    <button type="button" class="close" data-dismiss="modal">×</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <div class="form-section" style="text-align:left">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="row_bar">
                                    <div>Doy you want to Save Record ?</div>
                                </div>
                            </div>
                            <br />
                            <br />

                            <div class="col-md-4">
                                <button type="button" class="btn btn-primary btn-block" id="btnClose6Yes">Yes</button>
                            </div>

                            <div class="col-md-4">
                                <button type="button" class="btn btn-primary btn-block" id="btnModelClose6" data-dismiss="modal">No</button>
                            </div>
                            <div class="col-md-4">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $("#btnClose6").click(function () {
                $("#modelClose6").modal();
            });
        });
    </script>
    <script type="text/javascript">
$(function () {
     $("#btnModelClose6").click(function(){
window.location.href = "@Url.Action("CORSPatient", "Home")";
});
});
    </script>

