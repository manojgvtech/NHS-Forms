@model NHS.Models.clsSJROutComeModel
@{
    ViewBag.Title = "SJROutcome";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row setup-content" id="step-1">
    @using (Html.BeginForm("SJROutcome", "Home", FormMethod.Post, new { @id = "my_form" }))
    {
        AntiForgeryConfig.SuppressXFrameOptionsHeader = true;
        @*@Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
    <div class="col-xs-12 col-lg-12">
        <div class="row" align="right">
            <div class="col-md-12">
                <input type="image" src="~/images/Delete.png" width="30" height="30" alt="Submit" id="btnClose" title="Close" />
            </div>
        </div>
        <div class="col-md-12 well text-center">
            <div class="form-section" style="text-align:left">
                <div class="lable_title">
                    <h2>SJR OUTCOME</h2>
                </div>
                <div class="row">
                    <div class="col-md-9">
                        <label class="label_part">Stage 2 SJR Required?</label>
                    </div>
                    <div class="col-md-0">                       
                        @Html.CheckBoxFor(model => model.clsSjrOutCome.Stage2SJRRequired, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="col-md-1">
                        <label class="label_part" for="defaultCheck1">Yes</label>
                    </div>
                    @*<div class="col-md-0">
                    @*<input class="form-checkbox-input" type="checkbox" value="" id="cbStage2SJRRequiredNo" name="cbStage2SJRRequiredNo">*@
                    @*@Html.CheckBoxFor(model => model.clsSjrOutCome.Stage2SJRRequired, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="col-md-1">
                        <label class="label_part" for="defaultCheck1">No</label>
                    </div>*@
                    <div class="col-md-7">
                        <div class="row_bar">
                            <label class="label_part">Stage 2 SJR date sent</label>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="row_bar">                          
                            @Html.EditorFor(model => model.clsSjrOutCome.Stage2SJRDateSent, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="col-md-7">
                        <div class="row_bar">
                            <label class="label_part">Stage 2 SJR sent to</label>
                        </div>
                    </div>

                    <div class="col-md-5">
                        <div class="row_bar">                        
                            @Html.EditorFor(model => model.clsSjrOutCome.Stage2SJRSentTo, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
                <div class="lable_title">
                    <h2>SIRI/ RCA OUTCOME</h2>
                </div><br />
                <div class="row">
                    <div class="col-md-7">
                        <label class="label_part">Reference Number</label>
                    </div>

                    <div class="col-md-5">                       
                        @Html.EditorFor(model => model.clsSjrOutCome.ReferenceNumber, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="col-md-7">
                        <label class="label_part">Date Received</label>
                    </div>

                    <div class="col-md-5">                      
                        @Html.EditorFor(model => model.clsSjrOutCome.DateReceived, new { htmlAttributes = new { @class = "form-control input_datepicker" } })
                    </div>
                    <div class="col-md-12">
                        <label class="label_part">Comments</label>
                    </div>
                    <div class="col-md-6">                        
                        @Html.TextAreaFor(model => model.clsSjrOutCome.Comments, 5, 100, new { @class = "form-control" })
                    </div>
                </div><br />
                <div class="lable_title">
                    <h2>MORTALITY SURVEILLANCE GROUP </h2>
                </div>
                <div class="row">
                    <div class="col-md-9">
                        <label class="label_part">Presentation to MSG required? </label>
                    </div>
                    <div class="col-md-0">                      
                        @Html.CheckBoxFor(model => model.clsMortalitySurveillance.PresentationToMSG, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="col-md-1">
                        <label class="label_part" for="defaultCheck1">Yes</label>
                    </div>
                    @*<div class="col-md-0">
                        <input class="form-checkbox-input" type="checkbox" value="" id="cbPresentationToMSGNo" name="cbPresentationToMSGNo">
                    </div>
                    <div class="col-md-1">
                        <label class="label_part" for="defaultCheck1">No</label>
                    </div>*@
                    <div class="col-md-7">
                        <label class="label_part">Discussed with MSG</label>
                    </div>

                    <div class="col-md-5">                      
                        @Html.EditorFor(model => model.clsMortalitySurveillance.DiscussedWithMSG, new { htmlAttributes = new { @class = "form-control " } })
                    </div>
                    <div class="col-md-7">
                        <div class="row_bar">
                            <label class="label_part">Avoidability Score</label>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="row_bar">                          
                            @Html.DropDownListFor(x => x.clsMortalitySurveillance.AvoidabilityScoreID, new List<SelectListItem>
                               {
                                                   new SelectListItem() {Text = "Select", Value="-1"},
                                                   new SelectListItem() {Text = "0", Value="0"},
                                                   new SelectListItem() {Text = "1", Value="1"},
                                                   new SelectListItem() {Text = "2", Value="2"},
                                                   new SelectListItem() {Text = "3", Value="3"},


                               }, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-12">
                        <label class="label_part">Comments</label>
                    </div>
                    <div class="col-md-6">                      
                        @Html.TextAreaFor(model => model.clsMortalitySurveillance.Comments, 5, 100, new { @class = "form-control" })
                    </div>
                    <div class="col-md-12">
                        <label class="label_part">Feedback to NoK</label>
                    </div>
                    <div class="col-md-6">                       
                        @Html.TextAreaFor(model => model.clsMortalitySurveillance.FeedbackToNoK, 5, 100, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-12" align="center">
                    <button id="btnSave" type="submit" class="btn btn-primary btn-lg" name="btnSave">Save </button>
                </div>
            </div>
        </div>
    </div>
    }
</div>
<br />
<br />

<div class="modal fade" id="modelClose">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Messsage</h4>
                <button type="button" class="close" data-dismiss="modal">×</button>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                <div class="form-section" style="text-align:left">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row_bar">
                                <div>Doy you want to Save Record ?</div>
                            </div>
                        </div>
                        <br />
                        <br />

                        <div class="col-md-4">
                            <button type="button" class="btn btn-primary btn-block" id="btnCloseYes">Yes</button>
                        </div>
                        <div class="col-md-4">
                            <button type="button" class="btn btn-primary btn-block" id="btnModelClose" data-dismiss="modal">NO</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#btnClose").click(function () {
            $("#modelClose").modal();
        });
    });
</script>

<script type="text/javascript">
$(function () {
    $("#btnModelClose").click(function(){
window.location.href = "@Url.Action("MortalityReview", "Home")";
    });
});
</script>