                                        @Html.HiddenFor(model => model.clsSjrFormInitial.SJRFormInitial_ID)
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row_bar">
                                        <label class="label_part">Please rate the care received by the patient during this phase</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    @*<div class="row_bar">*@

