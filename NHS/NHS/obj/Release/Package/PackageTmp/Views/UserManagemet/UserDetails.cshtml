</div>

<script>
    $(document).ready(function () {
        $("#myBtnUserManagementEdit").click(function () {
            $("#myModalUserManagementEdit").modal();
        });
        $("#myBtnUserManagementDelete").click(function () {
            $("#myModelUserManagementDelete").modal();
        });
        $("#myBtnUserManagementAdd").click(function () {
            $("#myModalUserManagementAdd").modal();
        });
    });
</script>

